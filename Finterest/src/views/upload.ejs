<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Upload Image</title>
    <%- include("partial/head") %>
</head>
<body>
    <%- include("partial/Navigation") %>
    <div class="container">
        <div class="row">
            <div class="col-md-4 offset-md-4 ">
                <div class="card">
                    <div class="card-body">
                        <img id="imgactual" alt="" class="card-img-top">
                        <form action="" method="POST" >
                            <div class="input-group mb-3">
                                <div class="custom-file">
                                    <input id="FileImagenFondo" name="FileImagenFondo" type="hidden" />
                                    <input type="file" class="custom-file-input" id="image" accept="image/*"  
                                            name="image" 
                                            onchange="prepareImagen('image', 'imgactual', 'FileImagenFondo');">
                                    <label class="custom-file-label" for="inputGroupFile02" 
                                         aria-describedby="inputGroupFileAddon02">
                                         Choose file
                                    </label>
                                </div>
                              </div>
                              <div class="form-group">
                                  <input type="text" name="title" placeholder="title" class="form-control" />
                              </div>
                              <div class="form-group">
                                  <textarea name="description" id="description" class="form-control" placeholder="description" ></textarea>
                              </div>
                              <div class="form-group">	
                                  <button type="submit" class="btn btn-success btn-block" >
                                    Guardar
                                  </button>
                              </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include("partial/Scripts") %>
</body>
</html>